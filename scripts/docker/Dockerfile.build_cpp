from ubuntu:16.04

WORKDIR /data

RUN apt-get -y update
RUN apt-get install -y \
	autoconf \
	cmake \
	automake \
	git-core \
	libtool \
	pkg-config \
	clang-3.8 \
	lldb-3.8 \
	wget

ENV CC=clang-3.8
ENV CXX=clang++-3.8

# gRPC team recommends $(curl -L http://grpc.io/release) for v1.0.0 below.
RUN git clone -b v1.0.1 https://github.com/grpc/grpc && \
    cd grpc && \
    git submodule update --init && \
    make && \
    make install
